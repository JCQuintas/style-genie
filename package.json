{
  "name": "style-genie",
  "version": "0.4.0",
  "description": "A style utility for css-in-js frameworks.",
  "scripts": {
    "build": "pika build",
    "test": "jest",
    "coverage": "jest --coverage",
    "prettier": "prettier --write .",
    "version": "npm run build",
    "release": "np",
    "link": "cd pkg && npm link && cd .."
  },
  "keywords": [
    "css-in-js",
    "style",
    "styled-components",
    "jss",
    "utils"
  ],
  "author": "Jose Quintas",
  "license": "MIT",
  "resolutions": {
    "np": "^7.4.0"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.35",
    "csstype": "^3.0.7",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "np": "^7.4.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  }
}
