{
  "name": "style-genie",
  "version": "0.1.0",
  "description": "A style utility for css-in-js frameworks.",
  "scripts": {
    "build": "pika build",
    "test": "jest",
    "coverage": "jest --coverage",
    "prettier": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "version": "npm run build",
    "release": "pika publish",
    "link": "cd pkg && npm link && cd .."
  },
  "keywords": [
    "css-in-js",
    "style",
    "styled-components",
    "jss",
    "utils"
  ],
  "author": "Jose Quintas",
  "license": "MIT",
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.7.1",
    "@pika/plugin-build-web": "^0.7.1",
    "@pika/plugin-ts-standard-pkg": "^0.7.1",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "csstype": "^2.6.7",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  }
}
